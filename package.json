{
  "name": "nextjs-typescript-storybook-boilerplate",
  "version": "1.0.0",
  "description": "An opinionated boilerplate template built using TypeScript, Next.js (App router), Storybook, Tailwind CSS, Shadcn, Playwright, React Hook Form, Zod and Husky",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test --ui",
    "format": "npx prettier . --write",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asbhogal/Nextjs-TypeScript-Storybook-Boilerplate.git"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "storybook",
    "playwright",
    "react-hook-form",
    "zod",
    "husky",
    "a11y",
    "testing",
    "boilerplate",
    "template",
    "app",
    "router"
  ],
  "author": "Aman Singh Bhogal",

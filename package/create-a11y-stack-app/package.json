    "storybook": "^8.0.0",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.x"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --quiet",
      "bash -c tsc"
    ]
  }
}

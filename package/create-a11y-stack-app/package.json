{
  "name": "create-a11y-stack-app",
  "version": "1.0.0",
  "description": "Accessibility-focused, typesafe Next.js frontend framework stack, complete with Storybook, Tailwind CSS, Shadcn, Playwright, React Hook Form, Zod, Prettier, ES Lint and Husky. ",
  "author": "Aman Singh Bhogal (support@a11y-stack.com)",
  "main": "./bin/index.js",
  "bin": {
    "create-a11y-stack-app": "./bin/index.js"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "test": "playwright test",
    "format": "prettier . --write",
    "prepare": "cd ../../ && husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "bin",
    "lib",
    "app",
    "playwright-report",
    "stories",
    "test-results",
    "tests",
    ".husky",
    ".storybook",
    "*.*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asbhogal/a11y-stack.git"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "storybook",
    "playwright",
    "react-hook-form",
    "zod",
    "husky",
    "a11y",
    "testing",
    "boilerplate",
    "template",
    "app",
    "router",
    "linting"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/asbhogal/a11y-stack/issues"
  },
  "homepage": "https://github.com/asbhogal/a11y-stack#readme",
  "dependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@hookform/resolvers": "^3.3.4",
    "clsx": "^2.1.1",
    "geist": "^1.3.0",
    "next": "^15.0.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.2.22",
    "@eslint/compat": "^1.2.2",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.14.0",
    "@innovixx/eslint-config": "^1.3.3",
    "@playwright/test": "^1.48.2",
    "@storybook/addon-a11y": "^8.2.9",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-onboarding": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/nextjs": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.0.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-sort-export-all": "^1.4.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-storybook": "^0.10.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
